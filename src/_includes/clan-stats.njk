{%- set stats = roster.members | clanStats -%}
{%- if stats -%}
<div class="clanStat">
  <div class="clanStatValue">{{ stats.count }}</div>
  <div class="clanStatLabel">Members</div>
</div>
<div class="clanStat">
  <div class="clanStatValue">{{ stats.totalTrophies | formatNumber }}</div>
  <div class="clanStatLabel">Total Trophies</div>
</div>
<div class="clanStat">
  <div class="clanStatValue">{{ stats.avgTrophies | formatNumber }}</div>
  <div class="clanStatLabel">Avg Trophies</div>
</div>
<div class="clanStat">
  <div class="clanStatValue">{{ stats.topTrophies | formatNumber }}</div>
  <div class="clanStatLabel">Top Trophies</div>
</div>
<div class="clanStat">
  <div class="clanStatValue">{{ stats.totalDonations | formatNumber }}</div>
  <div class="clanStatLabel">Weekly Donations</div>
</div>
<div class="clanStat">
  <div class="clanStatValue">{{ stats.avgLevel }}</div>
  <div class="clanStatLabel">Avg King Level</div>
</div>
{%- endif -%}
