<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="{{ description }}" />
  <title>{{ title }}</title>

  <link rel="canonical" href="{{ site.url }}{{ page.url }}" />
  <meta property="og:title" content="{{ title }}" />
  <meta property="og:description" content="{{ description }}" />
  <meta property="og:url" content="{{ site.url }}{{ page.url }}" />
  <meta property="og:type" content="website" />
  <meta property="og:image" content="{{ site.url }}/assets/poapkings.png" />
  <meta property="og:image:alt" content="POAP KINGS crest" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="1200" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="{{ title }}" />
  <meta name="twitter:description" content="{{ description }}" />
  <meta name="twitter:image" content="{{ site.url }}/assets/poapkings.png" />

  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "POAP KINGS",
    "url": "{{ site.url }}",
    "logo": "{{ site.url }}/assets/poapkings.png",
    "description": "{{ site.tagline }} â€” A Clash Royale clan with proof."
  }
  </script>

  <link rel="webmention" href="https://tinylytics.app/webmention/{{ site.tinylyticsId }}" />

  <link rel="stylesheet" href="{{ '/styles.css' | bust }}" />
</head>

<body>
  <header class="top">
    <div class="wrap inner">
      <div class="brandGroup">
        <a class="navJoin" href="{{ site.joinUrl }}" target="_blank" rel="noreferrer" data-tinylytics-event="nav.join">JOIN</a>
        <a class="brand" href="/"><strong>POAP KINGS</strong></a>
      </div>

      <nav aria-label="Primary">
        <a{% if navActive == "home" %} class="active"{% endif %} href="/">Home</a>
        <a{% if navActive == "roster" %} class="active"{% endif %} href="/roster">Roster</a>
        <a{% if navActive == "vault" %} class="active"{% endif %} href="/vault">Vault</a>
        <a{% if navActive == "members" %} class="active"{% endif %} href="/members">Members</a>
        <a{% if navActive == "faq" %} class="active"{% endif %} href="/faq">FAQ</a>
      </nav>
    </div>
  </header>

  <main{% if mainId %} id="{{ mainId }}"{% endif %} class="wrap pageMain">
    {{ content | safe }}

    <footer>
      <div class="tag">ðŸ‘‘ <strong>POAP KINGS</strong> <span class="tiny">â€” {{ site.tagline }}</span></div>
      {% if supercellDisclaimer %}
      <p class="tiny mt-sm">
        This fan community is not affiliated with <a href="https://supercell.com" target="_blank" rel="noreferrer">Supercell</a>. Clash Royale is a trademark of its respective owner.
      </p>
      {% endif %}
      <p class="tiny mt-sm">
        Content on this site is licensed under <a href="https://creativecommons.org/licenses/by-sa/4.0/" target="_blank" rel="noreferrer">CC BY-SA 4.0</a>.
      </p>
    </footer>
  </main>

  {% if appJs %}<script src="{{ '/app.js' | bust }}"></script>{% endif %}
  <script src="https://tinylytics.app/embed/{{ site.tinylyticsId }}.js?hits&kudos=%F0%9F%91%8F&countries&events&beacon" defer></script>
  {{ extraScripts | safe }}
</body>
</html>
